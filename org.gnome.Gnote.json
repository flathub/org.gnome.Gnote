{
    "app-id": "org.gnome.Gnote",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gnote",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--metadata=X-DConf=migrate-path=/org/gnome/gnote/"
    ],
    "cleanup": [
        "*.la",
        "/share/man"
    ],
    "modules": [
        "gtkmm.json",
        {
            "name": "gnote",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "post-install": [
                "for help_locale_dir in /app/share/help/??*; do mv $help_locale_dir /app/share/locale/${help_locale_dir##*/}/help; ln -s /app/share/locale/${help_locale_dir##*/}/help $help_locale_dir; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnote/45/gnote-45.1.tar.xz",
                    "sha256": "9eec27f8cb0a10d2fdb914a451e8b8418c260e78bf07360781a78a5e418cf941",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnote"
                    }
                },
                {
                    "type": "patch",
                    "paths": [
                        "0001-appdata-Update-appdata.patch",
                        "0002-appdata-Add-captions-to-screenshots.patch"
                    ]
                }
            ]
        }
    ]
}
