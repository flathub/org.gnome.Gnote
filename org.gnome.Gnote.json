{
    "app-id": "org.gnome.Gnote",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "gnote",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/gnote/"
    ],
    "cleanup": [
        "*.la",
        "/share/man"
    ],
    "modules": [
        "gtkmm.json",
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "gnote",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnome.org/pub/GNOME/sources/gnote/40/gnote-40.2.tar.xz",
                    "sha256": "7e1b1ec1cccc060269b07427e4360d14be55dc8100272e01714c0cca9e6bd805"
                },
                {
                    "type": "patch",
                    "paths": [
                        "desktop-add-X-Endless-LaunchMaximized-false.patch",
                        "appdata.patch"
                    ]
                }
            ],
            "post-install": [
                "sed -i -e 's/DesktopId=gnote.desktop/DesktopId=org.gnome.Gnote.desktop/' /app/share/gnome-shell/search-providers/org.gnome.Gnote.search-provider.ini"
            ]
        }
    ]
}
