{
    "app-id": "org.gnome.Gnote",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "gnote",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/gnote/"
    ],
    "cleanup": [
        "*.la",
        "/share/man"
    ],
    "modules": [
        "gtkmm.json",
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "gnote",
            "buildsystem": "meson",
            "sources": [
                {
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnote"
                    },
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnote/41/gnote-41.2.tar.xz",
                    "sha256": "21b0ef43514e6b68a08ed8573130185be36dbb9fb463b426ebd9f18c5092423f"
                },
                {
                    "type": "patch",
                    "paths": [
                        "desktop-add-X-Endless-LaunchMaximized-false.patch",
                        "appdata.patch"
                    ]
                }
            ],
            "post-install": [
                "for help_locale_dir in /app/share/help/??*; do mv $help_locale_dir /app/share/locale/${help_locale_dir##*/}/help; ln -s /app/share/locale/${help_locale_dir##*/}/help $help_locale_dir; done",
                "sed -i -e 's/DesktopId=gnote.desktop/DesktopId=org.gnome.Gnote.desktop/' /app/share/gnome-shell/search-providers/org.gnome.Gnote.search-provider.ini"
            ]
        }
    ]
}
